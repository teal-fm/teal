{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "install": {
      "dependsOn": ["^install"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["./dist/**", "../target/**"]
    },
    "build:rust": {
      "dependsOn": ["^build"],
      "outputs": ["../target/**", "./target/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:rust": {
      "dependsOn": ["build:rust"]
    },
    "lex:gen-server": {
      "dependsOn": [],
      "outputs": ["./src/**"]
    },
    "lex:gen": {
      "dependsOn": [],
      "outputs": ["./src/types/**", "./src/**/*.rs"]
    },
    "lex:watch": {
      "persistent": true,
      "cache": false
    },
    "lex:validate": {
      "dependsOn": [],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "@teal/amethyst#build": {
      "dependsOn": ["@teal/lexicons#lex:gen-server"],
      "outputs": ["./build/**"]
    },
    "@teal/amethyst#build:web": {
      "dependsOn": ["@teal/lexicons#lex:gen-server"],
      "outputs": ["./build/**"]
    },
    "@teal/amethyst#build:ios": {
      "dependsOn": ["@teal/lexicons#lex:gen-server"],
      "outputs": ["./build/**"]
    }
  }
}
